<body>

    <h3 style="margin-left: 30%; margin-right: 30%; margin-top: 5%;">Change ticket status</h3>

    <form action="/api/change-state" method="POST" style="margin-left: 30%; margin-right: 30%; margin-top: 3%;">

        <div class="form-group">

            <label for="exampleFormControlSelect">Select state</label>
            <select class="form-control" name="curstate" id="exampleFormControlSelect">
                <option>Not Started</option>
                <option>In Progress</option>
                <option>Resolved</option>
                <option id="doneid">Done</option>
            </select>

            <div class="form-group">
                <label for="exampleFormControlInput1">Auto generated ticket id</label>
                <input type="text" class="form-control" value='<%=_id%>' name="defid" id="exampleFormControlInput1"
                    placeholder="ticket id">
            </div>

            <button type="submit" class="btn btn-primary"> Change State</button>
    </form>

</body>
